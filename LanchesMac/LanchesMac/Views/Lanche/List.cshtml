@model LanchesListViewModel


<div>
    <h2>@ViewData["Titulo"]</h2>
</div>
@ViewData["Data"]

<hr/>
    @ViewBag.Lanches
<hr/>
<div class="container">
    <div class="row">

    @foreach (var lanche in Model.Lanches)
    {
        <div class="col-sm-4 col-md-4 col-lg-4">
            <p><img src="@lanche.ImagemUrl" class="img-fluid" /></p>
            <p>@lanche.Preco.ToString("C")</p>
            <h4>@lanche.Nome</h4>
            <p>@lanche.DescricaoCurta</p>
        </div>
    }
    </div>
</div>